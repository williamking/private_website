extends layout

block content
    div#main
        h1 #{article.title}
        div#article-main
            header
                span.author-name #{article.author.name}
                span.create-on created on 
                span.create-time #{moment(article.createAt).format('YY-MM-D')}
            div !{article.content}
        div.article-comments
            - for comment in article.comments  
                div.article-comment
                    div !{comment.content}  
                    div.comment-info
                        span.author-name #{comment.commentor}
                        span.create-on commented on
                        span.create-time #{moment(comment.At).format('YY-MM-D')}
                    div.comment-replies
                        div.get-replies Get replies

                    
