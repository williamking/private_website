extends layout

block content
    div#child-article-main
        h1 #{article.title}
        div#article-main
            header
                span.author-name #{article.author.name}
                span.create-on created on 
                span.create-time #{moment(article.createAt).format('YY-MM-D')}
            div.article-content !{article.content}
        div.create-comment
            header
                h3 Comments
                div.hz-line
            div#comment-block(reply-to='#{article._id}')
                div#comment-editor
                    script#comment-content(type='text/plain', name='content')
                div.commenter-info
                    input#commentor(type="text" name="commentor" placeholder="请填写你的昵称或邮箱")
                    button#comment-submit.btn.btn-primary Submit
                    
        div.article-comments
            - for comment in article.comments  
                div.article-comment
                    div !{comment.content}  
                    div.comment-info
                        span.author-name #{comment.commentor}
                        span.create-on commented on
                        span.create-time #{moment(comment.At).format('YY-MM-D')}
                    div.comment-replies
                        div.get-replies Get replies

                    
