doctype html
html(lang="zh-CN")
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css')
        script(src="/lib/jquery.js")
        script(src="/javascripts/all.js")
        script(src="/lib/clock.js")
    body
        div(id= "head")
            canvas#clock(width="300" height="300")
            div#left
            div#banner
            div#clock-image
            nav(id= "navigator")
                div.container-fluid
                    div
                        span.navbar-brand
                            |Navigator
                    div
                        div.authorize
                            if user
                                p Welcome, #{username}
                                button#profile-button.btn.btn-info Profile
                                button#logout-button.btn.btn-warning Logout
                            else
                                button#login-button.btn.btn-primary Login
                                button#register-button.btn.btn-success Register
                        ul.nav.navbar-nav.navigator
                            li  
                                div.list-frame
                                a(href= "/") index
                            li 
                                a(href= "/articles") article
                            li 
                                a(href= "/photo") photo
                            li  
                                a(href= "/lab") labtory

                    div#authorize-message.animate.invisible.modal2
                        header
                            h4 Message
                            button.close
                                span(aria-hidden="true") x
                        div.hz-line
                        div#message-content
                            p XXX
                            button.btn.btn-promary.message-confirm OK

                    div#login.invisible.modal2
                        header#login-header
                            h4 Login
                            button.close
                                span(aria-hidden="true") x
                        div.hz-line
                        div.input-group
                            span.input-group-addon#addon-login-1 username
                            input#login-username(type="text", name="username", aria-describedby="addon-login-1")
                        div.input-group
                            span.input-group-addon#addon-login-2 password
                            input(type="password", name="password", aria-describedby="addon-login-2")
                        div.hz-line
                        div.submit-buttons
                            button#login-submit.btn.btn-success Login
                            button#login-cancel.btn.btn-default.cancel Cancel
                                   
                    div#register.invisible.modal2
                        header#register-header
                            h4 Register
                            button.close
                                span(aria-hideen="true") x
                        div.hz-line
                        div.input-group
                            span.input-group-addon#addon-1 username
                            input(type="text", name="username", aria-describedby="addon-1")
                        div.input-group
                            span.input-group-addon#addon-2 password
                            input(type="password", name="password", aria-describedby="addon-2")
                        div.input-group
                            span.input-group-addon#addon-3 confirm password
                            input(type="password", name="confirm-password", aria-describedby="addon-3")
                        div.input-group
                            span.input-group-addon#addon-4 email 
                            input(type="text", name="email", aria-describedby="addon-4")
                        div.input-group
                            span.input-group-addon#addon-5 signature
                            input(type="text", name="signature", aria-describedby="addon-5")
                        div.input-group
                            span.input-group-addon#addon-6 qq
                            input(type="text", name="qq", aria-describedby="addon-6")
                        div.input-group
                            span.input-group-addon#addon-7 birthday
                            input(type="date", name="birthday", aria-describedby="addon-7")
                        div.hz-line
                        div.submit-buttons
                            button#register-submit.btn.btn-success Register
                            button#submit-cancel.btn.btn-default.cancel Cancel 

        div#main-content
            block content
        footer(id= "footer")
            div
            div#copy-right
                p Copyright &copy 2015 William.D.King.
            div#link
                ul
                    li
                        a(href= "/") Home
                    li
                        a(href= "http://weibo.com/p/1005051899517750/home?from=page_100505&mod=TAB#place") My MicroBlog
                    li
                        a(href= "mailto:williamjwking@gmail.com") My email
        
