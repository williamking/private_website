extends layout

block content
    header#drawing-header
       h1 canvas画图小程序
    div#drawing-canvas
        div#polygon-controller.invisible
            | stroke-style:
            input#polygon-stroke-style(type="text", name="strokeStyle")
            | fill-style:
            input#polygon-fill-style(type="text", name="fillStyle")
            | sides:
            input#polygon-sides(type="text", name="sides")
            | filled:
            input#polygon-filled(type="checkbox", name="filled", checked="true")
            | dashed:
            input#polygon-dashed(type="checkbox", name="dashed")

        canvas#canvas
